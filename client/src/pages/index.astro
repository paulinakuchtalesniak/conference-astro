---

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Statistics from '../components/Statistics.astro';
import '../styles/global.css';
import fetchApi from '../lib/strapi';
const pageTitle = "Home Page";

const speakers = await fetchApi({
  endpoint: "speakers",
  wrappedByKey: "data",

});
---

<style>
  .about-conference{
    margin:  calc(var(--space-3xl)*1.5) 0;
    margin-left: var( --space-xl);
    display: grid;
    grid-template-columns: 50% 50%;
    overflow: hidden;
    min-height: 60vh;

  }
  .about-conference__heading{
     font-size:var(--step-4);
        color: rgb(162, 61, 61);
            font-weight: 500;
  }
  .about__wrapper{
    grid-column: 1;
    grid-row: 1;
    align-self: center;
  }
  .about__img{
    height: 100%;
      grid-row: 1;
      grid-column: 2;
      aspect-ratio: 2/1;
      margin-left: var(--space-m);
        border-top-left-radius: 30rem;
  border-bottom-left-radius: 30rem;
  
    
  }
  .about-conference__paragraph{
    font-size: var(--step-0);
    padding-right: var( --space-xl);
  }
    @media screen and (max-width: 900px) {
        .about-conference{
    margin-left: var( --space-m);
    display: grid; 
    grid-template-columns: 50% 50%;
     

  }
  .about__wrapper {
    grid-column: 1/3;
    grid-row: 1;
  }
  .about__img {
    grid-column: 1/3;
    grid-row: 2;
      margin-left: 0;
          margin-top: var(--space-m);

  }
}


</style>
<BaseLayout pageTitle={pageTitle}>
     <Header />
  <Statistics />
<section class="about-conference">
  <div class="about__wrapper">
  <h2 class="about-conference__heading">
    About Color Aura Conference

  </h2>
  <p class="about-conference__paragraph">
The Aura Colors Conference offers a captivating three-day exploration of aura colors and spiritual well-being. Renowned speakers lead sessions, workshops, and live demonstrations, allowing attendees to unlock the secrets of their auras for personal growth. Choose between Copenhagen and Oslo for a tailored experience. Whether you're new to auras or an enthusiast, this conference promises an immersive, enlightening journey to enhance your spiritual wellness.</p>
  </div>
<img class ="about__img"src="././assets/conference.jpeg" alt="">
</section>
<section class="speakers">
  <h2 class="about-conference__heading">

  </h2>
</section>
</BaseLayout>
