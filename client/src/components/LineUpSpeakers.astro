---
const { speakers } = Astro.props;

import SpeakerSmallCard from "../components/SpeakerSmallCard.astro";
---

<style>
  .speakers__cards-lineup {
    grid-column: 2;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    display: grid;
    column-gap: var(--space-l);
    row-gap: var(--space-2xl);
    margin: var(--space-xl) var(--space-l);
  }
  .speakers__card {
    background: rgb(239, 140, 64);
    background: radial-gradient(
      circle,
      rgba(239, 140, 64, 1) 3%,
      rgba(234, 105, 103, 1) 48%,
      rgba(246, 174, 151, 1) 87%
    );
    display: grid;
  }

  .hidden-element {
    display: none;
  }
</style>

<ul class="speakers__cards-list speakers__cards-lineup">
  {
    speakers.map((speaker) => (
      <SpeakerSmallCard speaker={speaker} lineUp={true} />
    ))
  }
</ul>
