---
const { prev, next, path } = Astro.props;

// const baseUrl = `${import.meta.env.BASE_URL}`
const baseUrl = ``
---

<style>
  .prev-next__nav{
      grid-column: 1/5;
      grid-row: 1/3;
      justify-self: center;
      align-self: center;

      width: 100%;

  }

 .prev-next__nav ul{
  display: flex;
  justify-content: space-between;
 }
 .left{
  margin-left: var(--space-l);
 }
 .right{
  margin-right: var(--space-l);
 }

  .left a, .right a{
    font-size: var(--step-0);
    text-decoration: none;
   background-color:  #ea696768;
   padding: var(--space-xs);
   border-radius: var(--space-l);
    font-weight: 700;
    color: var(--color-primary);
    color: #ea6967;
    transition: color 0.2s ease-in-out;
  }
 
</style>

<nav class="prev-next__nav">
  <ul>
    {
      prev && (
        <li class="left">
          <a href={`${baseUrl}/${path}/${prev.id}`}>&#8592;</a>
        </li>
      )
    }
    {
      next && (
        <li class="right">
          <a href={`${baseUrl}/${path}/${next.id}`}>&#8594;</a>
        </li>
      )
    }
  </ul>
</nav>